    "babel-core": "^6.4.0",
    "babel-plugin-transform-es2015-destructuring": "^6.4.0",
    "babel-register": "^6.4.3",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.0",
    "browserify": "^13.0.0",
    "gulp": "^3.9.0",
    "gulp-babel-istanbul": "^0.11.0",
    "gulp-clean": "^0.3.1",
    "gulp-mocha": "^2.2.0",
